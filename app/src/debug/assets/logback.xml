<configuration debug="true">
    <!-- Create a logcat appender -->
    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
    </appender>

    <!-- Custom appender will display ERRORs as some kind of notification message to the user -->
    <appender name="NOTIFICATION" class="com.jikabao.android.common.util.LoggerNotificationAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
    </appender>

    <!-- Write DEBUG (and higher level) messages to logcat -->
    <root level="DEBUG">
        <appender-ref ref="LOGCAT" />
        <appender-ref ref="NOTIFICATION" />
    </root>

</configuration>